<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.smallrye</groupId>
    <artifactId>smallrye-parent</artifactId>
    <version>1</version>
  </parent>

  <artifactId>smallrye-reactive-streams-operators-project</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <name>MicroProfile Reactive Streams Operators Implementation</name>
  <description>An implementation of the MicroProfile Reactive Streams Operators specification</description>

  <packaging>pom</packaging>

  <modules>
    <module>implementation</module>
    <module>cdi</module>
  </modules>

  <properties>
    <vertx.version>3.5.3</vertx.version>
    <log4j2.version>2.11.1</log4j2.version>
    <microprofile-reactive-streams.version>1.0.0-M1</microprofile-reactive-streams.version>
    <rxjava.version>2.2.0</rxjava.version>

    <weld-core.version>3.0.4.Final</weld-core.version>
  </properties>
  
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.vertx</groupId>
        <artifactId>vertx-stack-depchain</artifactId>
        <version>${vertx.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>org.eclipse.microprofile.reactive.streams</groupId>
      <artifactId>microprofile-reactive-streams-operators</artifactId>
      <version>${microprofile-reactive-streams.version}</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.microprofile.reactive.streams</groupId>
      <artifactId>microprofile-reactive-streams-operators-tck</artifactId>
      <scope>test</scope>
      <version>${microprofile-reactive-streams.version}</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.microprofile.reactive.streams</groupId>
      <artifactId>microprofile-reactive-streams-operators-tck-arquillian</artifactId>
      <scope>test</scope>
      <version>${microprofile-reactive-streams.version}</version>
    </dependency>

    <dependency>
      <groupId>io.vertx</groupId>
      <artifactId>vertx-rx-java2</artifactId>
    </dependency>
    <dependency>
      <groupId>io.reactivex.rxjava2</groupId>
      <artifactId>rxjava</artifactId>
      <version>${rxjava.version}</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>6.14.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <developers>
    <developer>
      <id>cescoffier</id>
      <name>Clement Escoffier</name>
      <email>clement[AT]apache[DOT]org</email>
      <url>https://github.com/cescoffier</url>
    </developer>
  </developers>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
      <comments>A business-friendly OSS license</comments>
    </license>
  </licenses>

  <repositories>
    <repository>
      <id>sonatype-snapshots</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots/io/reactiverse</url>
      <name>Snapshots</name>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
</project>
